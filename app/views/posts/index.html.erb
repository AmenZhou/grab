<h1>Listing posts</h1>

<table border="1" width="400">
  <thead>
    <tr>
      <th>Title</th>
      <th>Ct name</th>
      <th>Upload time</th>
      <th>Content</th>
      <th>Phone n</th>
      <th>Rent m</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><a href='<%= post.detail_url %>'> <%= post.title%> </a></td>
        <td><%= post.ct_name %></td>
        <td><%= post.up_time.strftime("%F") %></td>
        <td><%= post.content %></td>
        <td><%= post.phone_n %></td>
        <td><%= post.rent_m %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

