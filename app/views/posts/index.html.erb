<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Ct name</th>
      <th>Unique code</th>
      <th>Detail url</th>
      <th>Upload time</th>
      <th>Content</th>
      <th>Phone n</th>
      <th>Rent m</th>
      <th>Site source</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.ct_name %></td>
        <td><%= post.unique_code %></td>
        <td><%= post.detail_url %></td>
        <td><%= post.upload_time %></td>
        <td><%= post.content %></td>
        <td><%= post.phone_n %></td>
        <td><%= post.rent_m %></td>
        <td><%= post.site_source %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
