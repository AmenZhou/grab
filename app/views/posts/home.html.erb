<%-#encoding: utf-8%>
<h1>
分类数据抓取页面
</h1>
<script>
  $('document').ready(function(){
    $('form').append('<input id="lines_id" type="hidden" name="post[grab_lines]" value="10">')
    $('#grab_lines').change(function(){
      var line_number = $('#grab_lines').val();
      $('form input#lines_id').remove();
      $('form').append('<input id="lines_id" type="hidden" name="post[grab_lines]" value="'+ line_number +'">')
    });
  });
  
  $('document').ready(function(){
	  $('form[action="/posts/grab_dadi"]').append('<input id="source_id" type="hidden" name="post[grab_source]" value="dadi_housrent_flushing">')

	  $('#grab_source').change(function(){
		  if ($('#grab_source').val() == "法拉盛租房")
			var select_source = "dadi_housrent_flushing";
		  else if ($('#grab_source').val() == "曼哈顿租房")
			var select_source = "dadi_housrent_manhattan";
		  else if ($('#grab_source').val() == "皇后区租房")
			var select_source = "dadi_housrent_queens";
		  else if ($('#grab_source').val() == "布碌仑租房")
			var select_source = "dadi_housrent_brooklyn";
		  else if ($('#grab_source').val() == "艾姆赫斯特租房")
			var select_source = "dadi_housrent_elmhurst";
		  else if ($('#grab_source').val() == "房屋买卖")
			var select_source = "dadi_housale";
		  else if ($('#grab_source').val() == "生意转让")
			var select_source = "dadi_busitran";
		  else if ($('#grab_source').val() == "招聘请人")
			var select_source = "dadi_recruit";
		  else if ($('#grab_source').val() == "汽车买卖")
			var select_source = "dadi_car";
		  else 
			var select_source = "dadi_housrent_flushing"
		
		  $('form input#source_id').remove();
		  $('form[action="/posts/grab_dadi"]').append('<input id="source_id" type="hidden" name="post[grab_source]" value="'+ select_source +'">')
	    });
	});	
		
	$('document').ready(function(){
	  $('form[action="/post_ulos/grab_ulo"]').append('<input id="source_ulo_id" type="hidden" name="post[grab_source]" value="ulo_housrent">')

	  $('#grab_source_ulo').change(function(){
		  if ($('#grab_source_ulo').val() == "租房信息")
			var select_source = "ulo_housrent";
		  else if ($('#grab_source_ulo').val() == "房屋买卖")
			var select_source = "ulo_housale";
		  else if ($('#grab_source_ulo').val() == "生意转让")
			var select_source = "ulo_busitran";
		  else if ($('#grab_source_ulo').val() == "招聘求职")
			var select_source = "ulo_recruit";
		  else 
			var select_source = "ulo_housrent"
		
		  $('form input#source_ulo_id').remove();
		  $('form[action="/post_ulos/grab_ulo"]').append('<input id="source_ulo_id" type="hidden" name="post[grab_source]" value="'+ select_source +'">')
	    });
	});
</script>
