<h1>美国生活在线--租房信息</h1>

<table border="1" width="1000" id='post_ulo_housrent'>
  <thead>
    <tr>
      <th>标题</th>
	  <th>发布时间</th>
	  <th>租房类型</th>
      <th>内容</th>
      <th>联系电话</th>
      <th>房租价格</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @post_ulo_housrents.each do |post_ulo_housrent| %>
      <tr>
        <td><%= post_ulo_housrent.title %></td>
		<td><%= post_ulo_housrent.up_time.strftime("%F") %></td>
		<% if post_ulo_housrent.ct_name == 'Single Room' %>
			<td style="width:100px;">单房出租</td>
		<% elsif post_ulo_housrent.ct_name == 'Whole House' %>
			<td style="width:100px;">整套出租</td>
		<% elsif post_ulo_housrent.ct_name == 'Short Time' %>
			<td style="width:100px;">短期租房</td>
		<% elsif post_ulo_housrent.ct_name == 'Else' %>
			<td style="width:100px;">其他租房</td>
		<% elsif post_ulo_housrent.ct_name == 'Wanna Rent' %>
			<td style="width:100px;">我要租房</td>
		<% else %>
			<td style="width:100px;"><%= post_ulo_housrent.ct_name %></td>
		<% end %>
        <td><%= post_ulo_housrent.content %></td>
        <td style='width:100px;'><%= post_ulo_housrent.phone_n %></td>
        <td><%= post_ulo_housrent.rent_m %></td>
        <td><%= link_to 'Show', post_ulo_housrent %></td>
        <td><%= link_to 'Edit', edit_post_ulo_housrent_path(post_ulo_housrent) %></td>
        <td><%= link_to 'Destroy', post_ulo_housrent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#post_ulo_housrent').dataTable();
} );
</script>

